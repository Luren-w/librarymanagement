		<!-- 内容区域 -->
		<div class="content-wrapper">

			<!-- 内容头部 -->
			<section class="content-header">
			<h1>
				图书查询 <small>全部图书</small>
			</h1>
			<ol class="breadcrumb">
				<li><a href="#"><i
						class="fa fa-dashboard"></i> 首页</a></li>
				<li><a
					href="#">图书查询</a></li>

				<li class="active">全部图书</li>
			</ol>
			</section>
			<!-- 内容头部 /-->

				<!-- 正文区域 -->
				<section class="content"> <!-- .box-body -->
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title">列表</h3>
					</div>

					<div class="box-body">

						<!-- 数据表格 -->
						<div class="table-box">
							<!--数据列表-->
							<table id="dataList"
								class="table table-bordered table-striped table-hover dataTable">
								<thead>
									<tr>
										<th class="sorting_asc">书名</th>
										<th class="sorting_asc">作者</th>
										<th class="sorting_asc">出版社</th>
										<th class="sorting_asc">ISBN</th>
										<th class="sorting_asc">价格</th>
										<th class="sorting_desc">剩余数量</th>
										<th class="text-center ">借还</th>
										<th class="text-center">详情</th>
									</tr>
								</thead>
								<tbody>
								<c:forEach items="${bookList}" var="book">
									<tr>
										<td>${book.name}</td>
										<td>${book.author}</td>
										<td>${book.publish}</td>
										<td>${book.ISBN}</td>
										<td>${book.price}</td>
										<td>${book.number}</td>

										<c:set var="flag" value="false"/>
										<c:forEach var="lend" items="${myLendList}">
											<c:if test="${lend eq book.bookId}">
												<c:set var="flag" value="true"/>
											</c:if>
										</c:forEach>

										<c:if test="${flag}">
											<td><a href="/reader/returnbook.do?bookId=${book.bookId}">
												<button type="button" class="btn btn-danger btn-xs">归还</button>
											</a></td>
										</c:if>
										<c:if test="${not flag}">
											<c:if test="${book.number>0}">
												<td><a href="/reader/lendbook.do?bookId=${book.bookId}">
													<button type="button" class="btn btn-primary btn-xs">借阅</button>
												</a></td>
										</c:if>
											<c:if test="${book.number==0}">
												<td>
													<button type="button" class="btn btn-defalut btn-xs" disabled="disabled">已空</button>
												</td>
											</c:if>
										</c:if>
										<td><a href="bookdetail.do?bookId=${book.bookId}">
											<button type="button" class="btn btn-success btn-xs">详情</button>
										</a></td>
									</tr>
								</c:forEach>
									
								</tbody>
								<!--
                            <tfoot>
